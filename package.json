{
  "devDependencies": {
    "@alleyinteractive/eslint-config": "^0.1.0",
    "@alleyinteractive/stylelint-config": "^0.0.2",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "license": "GPL-2.0-or-later",
  "name": "create-wordpress-project",
  "scripts": {
    "check-types": "tsc --noEmit",
    "eslint": "eslint --ext .ts --ext .tsx .",
    "eslint:fix": "eslint --ext .ts --ext .tsx . --fix",
    "lint": "npm run check-types && npm run eslint && npm run stylelint",
    "stylelint": "stylelint \"**/*.scss\" --allow-empty-input",
    "stylelint:fix": "stylelint \"**/*.scss\" --allow-empty-input --fix",
    "test:watch": "jest --watch",
    "test": "jest --passWithNoTests"
  },
  "version": "1.0.0"
}
