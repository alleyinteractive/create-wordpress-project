{
  "dependencies": {
    "@alleyinteractive/block-editor-tools": "^0.3.2"
  },
  "devDependencies": {
    "@alleyinteractive/eslint-config": "^0.1.0",
    "@alleyinteractive/stylelint-config": "^0.0.2",
    "@types/jest": "^29.5.2",
    "@wordpress/scripts": "^26.6.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "license": "GPL-2.0-or-later",
  "name": "create-wordpress-project",
  "scripts": {
    "build": "npm run build:plugin && npm run build:theme",
    "build:plugin": "cd plugins/create-wordpress-plugin && wp-scripts build --webpack-copy-php --webpack-src-dir=blocks",
    "build:theme": "cd themes/create-wordpress-theme && wp-scripts build",
    "create-block": "npx @alleyinteractive/create-block -l typescript",
    "check-types": "tsc --noEmit",
    "eslint": "eslint --ext .ts --ext .tsx .",
    "eslint:fix": "eslint --ext .ts --ext .tsx . --fix",
    "lint": "npm run check-types && npm run eslint && npm run stylelint",
    "start:plugin": "cd plugins/create-wordpress-plugin && wp-scripts start --webpack-copy-php --webpack-src-dir=blocks",
    "start:plugin:hot": "cd plugins/create-wordpress-plugin && wp-scripts start --webpack-copy-php --webpack-src-dir=blocks --hot",
    "start:theme": "cd themes/create-wordpress-theme && wp-scripts start --webpack-copy-php",
    "start:theme:hot": "cd themes/create-wordpress-theme && wp-scripts start --webpack-copy-php",
    "stylelint": "stylelint \"**/*.scss\" --allow-empty-input",
    "stylelint:fix": "stylelint \"**/*.scss\" --allow-empty-input --fix",
    "test:watch": "jest --watch",
    "test": "jest --passWithNoTests"
  },
  "version": "1.0.0"
}
